<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_main_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_music_note"
            android:contentDescription="Icône note de musique"
            android:tint="@color/forest_green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hymnes"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hymnes et Louanges Adventiste"
                android:textColor="@color/black"
                android:alpha="0.7"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Featured Hymn Section -->
    <LinearLayout
        android:id="@+id/featured_hymn_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/adaptive_card_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hymne du Jour"
                android:textColor="@color/black"
                android:alpha="0.7"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/featured_hymn_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:textColor="@color/forest_green"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/featured_hymn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Vous qui sur la terre !"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/featured_hymn_lyrics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:text="Vous qui sur la terre habitez, Chantez à haute voix, chantez!"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:textSize="10sp"
            android:maxLines="3"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Stats Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <!-- Hymns Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/adaptive_card_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginEnd="6dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_music_list"
                android:contentDescription="Icône liste musicale"
                android:tint="@color/forest_green" />

            <TextView
                android:id="@+id/hymns_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Favorites Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/adaptive_card_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginStart="6dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_favorite"
                android:contentDescription="Icône favori"
                android:tint="@color/forest_green" />

            <TextView
                android:id="@+id/favorites_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Quick Actions Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/adaptive_card_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginEnd="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Icône recherche"
                android:tint="@color/forest_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rechercher"
                android:textColor="@color/black"
                android:alpha="0.7"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorites_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/adaptive_card_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginStart="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_favorite_outline"
                android:contentDescription="Icône favoris"
                android:tint="@color/forest_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Favoris"
                android:textColor="@color/black"
                android:alpha="0.7"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>